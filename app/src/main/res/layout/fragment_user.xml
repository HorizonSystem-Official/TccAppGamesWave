<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".UserFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fotoUser"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/circle"
                android:backgroundTint="#ffffeb3b"
                android:layout_margin="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewNome"
                style="@style/TxtPadraoTxt"
                android:layout_marginStart="32dp"
                android:layout_marginTop="54dp"
                android:text="Seu nome"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/fotoUser"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewEmail"
                style="@style/TxtPadraoTxt"
                android:layout_marginStart="32dp"
                android:layout_marginTop="14dp"
                android:textColor="@color/CinzaEscuro"
                android:text="Seu email"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/fotoUser"
                app:layout_constraintTop_toBottomOf="@+id/textViewNome" />

            <Button
                android:id="@+id/info_conta"
                style="@style/BtnPadraoConta"
                android:text="info conta"
                android:layout_marginTop="56dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewEmail" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>