<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5FF"
    tools:context=".TelaRecibo">

    <ImageView
        android:id="@+id/checkImg"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/TelaToda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/check" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/TelaToda"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

    <View
        android:id="@+id/ToobarVolta"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/BaseRoxoescuro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/imageViewVoltarHome"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/seta_voltar" />

    <TextView
        android:id="@+id/txtReciboAux"
        style="@style/TxtPadraoTxtClaro"
        android:text="Pagamento"
        android:textStyle="bold"
        android:layout_margin="15dp"
        app:layout_constraintStart_toEndOf="@+id/imageViewVoltarHome"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/game_wave_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ToobarVolta" />

    <TextView
        android:id="@+id/txtAuxPag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="21sp"
        android:textStyle="bold"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:backgroundTint="@color/BaseRosa"
        android:background="@drawable/borda_aredondada"
        android:text="Pagante"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />


    <TextView
        android:id="@+id/txtNomeUser"
        style="@style/TxtPadraoTxt"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Nome: Julia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAuxPag" />

    <TextView
        android:id="@+id/txtCpfUser"
        style="@style/TxtPadraoTxt"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Cpf: 333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNomeUser" />

    <View
        android:id="@+id/line_1"
        style="@style/StyleLinha"
        android:background="@color/Cinza"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtCpfUser" />

    <TextView
        android:id="@+id/txtAuxPagamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:textSize="21sp"
        android:textStyle="bold"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:backgroundTint="@color/BaseRosa"
        android:background="@drawable/borda_aredondada"
        android:text="Pagamento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_1" />

    <TextView
        android:id="@+id/txtMeioPagAux"
        style="@style/TxtPadraoTxt"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Forma De Pagamento "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAuxPagamento" />

    <TextView
        android:id="@+id/txtMeioPag"
        style="@style/TxtPadraoTxt"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="32dp"
        android:textStyle="bold"
        android:text="CartÃ£o"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAuxPagamento" />


    <TextView
        android:id="@+id/txtParcelasAux"
        style="@style/TxtPadraoTxt"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:text="Parcelas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMeioPag" />

    <TextView
        android:id="@+id/txtParcelas"
        style="@style/TxtPadraoTxt"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="32dp"
        android:textStyle="bold"
        android:text="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMeioPag" />

    <View
        android:id="@+id/line_"
        style="@style/StyleLinha"
        android:background="@color/Cinza"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtParcelas" />

    <TextView
        android:id="@+id/txtTotalAux"
        style="@style/TxtPadraoTxt"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:textSize="21sp"
        android:text="Valor Total"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_" />

    <TextView
        android:id="@+id/txtTotal"
        style="@style/TxtPadraoTxt"
        android:textSize="21sp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="32dp"
        android:textStyle="bold"
        android:text="R$392.45"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>