<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/BaseRoxo"
    android:layout_height="match_parent"
    tools:context=".DetelhesProd">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewVoltarHome"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/seta_voltar" />

            <ImageView
                android:id="@+id/imgviewProd"
                android:layout_width="400dp"
                android:layout_height="450dp"
                android:layout_marginTop="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logogameswave" />

    <TextView
        android:id="@+id/textViewNomeProduto"
        style="@style/TxtPadraoTxtClaro"
        android:layout_marginStart="15dp"
        android:text=""
        android:layout_marginTop="9dp"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgviewProd" />

            <TextView
                android:id="@+id/textViewPreco"
                style="@style/TxtPadraoTxtClaro"
                android:text=""
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_margin="20dp"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewNomeProduto" />

            <Button
                android:id="@+id/btnAddCarrinho"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="38dp"
                android:background="@drawable/borda_aredondada"
                android:backgroundTint="@color/BaseRosa"
                android:text="@string/TxtAddCarrinho"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewPreco" />

            <TextView
                android:id="@+id/textViewCatAux"
                style="@style/TxtPadraoTxtClaro"
                android:layout_marginStart="15dp"
                android:layout_marginTop="45dp"
                android:text="@string/TxtCat"
                android:textColor="@color/Cinza"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnAddCarrinho" />

    <TextView
        android:id="@+id/textViewCat"
        style="@style/TxtPadraoTxtClaro"
        android:text=""
        android:background="@drawable/borda_aredondada"
        android:backgroundTint="@color/BaseRoxoescuro"
        android:layout_marginTop="45dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@+id/textViewCatAux"
        app:layout_constraintTop_toBottomOf="@+id/btnAddCarrinho" />

    <TextView
        android:id="@+id/textViewLanAux"
        style="@style/TxtPadraoTxtClaro"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:text="@string/TxtLanc"
        android:textColor="@color/Cinza"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCatAux" />

    <TextView
        android:id="@+id/textViewDateLanc"
        style="@style/TxtPadraoTxtClaro"
        android:text="2014"
        android:layout_marginTop="15dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@+id/textViewLanAux"
        app:layout_constraintTop_toBottomOf="@+id/textViewCat" />

    <ImageView
        android:id="@+id/ImgClasInd"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/classind_l"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLanAux" />

    <TextView
        android:id="@+id/textViewDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TxtPadraoTxtClaro"
        android:layout_marginStart="12dp"
        android:layout_margin="20dp"
        android:text="Desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImgClasInd" />


    <TextView
        android:id="@+id/textViewComentario"
        style="@style/TxtPadraoTxtClaro"
        android:text="Comentarios"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDesc" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewComentario"
        style="@style/Theme.MaterialComponents.DayNight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:background="@color/BaseRoxo"
        android:divider="@color/Cinza"
        android:paddingTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewComentario" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>